<div class="container content paleta" style="min-height: 200px;margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form method="post" action="/admin/novedades/modificar">
                <input type="hidden" value="{{novedades.id}}" name="id">
                <div class="mb-3">
                    <input type="text" placeholder="Titulo" value="{{novedades.titulo}}" class="form-control" name="titulo">
                </div>
                <div class="mb-3">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{novedades.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
                {{#if error}}
                    <h5>{{message}}</h5>
                {{/if}}
            </form>
        </div>
    </div>
</div>