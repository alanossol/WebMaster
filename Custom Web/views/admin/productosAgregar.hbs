<div class="container content paleta" style="min-height: 200px;margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un nuevo producto</h4>
            <form method="post" action="/admin/productos/agregar">
                <div class="mb-3">
                    <input type="text" placeholder="Nombre" class="form-control" name="nombre">
                </div>
                <div class="mb-3">
                    <textarea placeholder="url" class="form-control" name="url"></textarea>
                </div>
                <div class="mb-3">
                    <textarea placeholder="Especificaciones" class="form-control" name="especificaciones"></textarea>
                </div>
                <div class="mb-3">
                    <textarea placeholder="Descripcion" class="form-control" name="descripcion"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>