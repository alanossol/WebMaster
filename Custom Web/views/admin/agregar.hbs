<div class="container content paleta" style="min-height: 200px;margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form method="post" action="/admin/novedades/agregar">
                <div class="mb-3">
                    <input type="text" placeholder="Titulo" class="form-control" name="titulo">
                </div>
                </div>
                <div class="mb-3">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>